
@{
    ViewBag.Title = "Login";
}

<br /><br /><br />

<script type="text/javascript">
    function login() {
        var log = $("#login").val();
        var pass = $("#pass").val();
        var data = {
            'login': log,
            'password': pass
        };
        $.ajax({
            type: 'POST',
            data: data,
            url: '@Url.Action("Login", "Home")',
            dataType: 'json',
            success: function (data) {
                if (data.Success) {
                    window.location = '@Url.Action("Index","Home")';
                } else {
                    alert(data.Error);
                }
            }
        });
    }
</script>

<div class="table" style="width:20%; margin-left:40%">
    <div class="row">
        <h4>Логин</h4>
        <input type="text" name="login" id="login" />
    </div>
    <div class="row">
        <h4>Пароль</h4>
        <input type="password" name="pass" id="pass" />
    </div>
    <div class="row center-block" style="margin-top:15px">
        <input type="button" name="loginButton" id="loginButton" value="Вход" onclick="login()" style="width:40%; margin-left:10%"/>
    </div>
</div>

