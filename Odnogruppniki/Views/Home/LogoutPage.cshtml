
@{
    ViewBag.Title = "Logout";
}

<script type="text/javascript">
    function logout() {
        $.ajax({
            url: '@Url.Action("Logout","Home")',
            type: 'POST',
            dataType: 'json',
            success: function (data) {
                if (data.Success) {
                    window.location = '@Url.Action("Index","Home")'
                }
            }
        });
    }
</script>

<h2>Вы действительно хотите выйти?</h2>
<br />
<input type="button" name="logout" id="logout" value="Выйти" onclick="logout()" />

